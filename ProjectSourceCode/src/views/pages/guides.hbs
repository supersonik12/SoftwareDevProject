<!DOCTYPE html>
<html lang="en" class="h-100">

{{> header }}  {{!-- This inserts the header partial --}}

<body>
  <div class="container">
    <h1>Pet Care Guide</h1>

    <div class="icon-grid">
      {{#each pets}}
        <div class="pet-icon" onclick="showGuide('{{this.type}}')">
          <img src="{{this.image}}" alt="{{this.type}}">
          <p>{{this.type}}</p>
        </div>
      {{/each}}
    </div>

    <div id="care-guide" class="care-guide hidden">
      <h2 id="guide-title"></h2>
      <div id="guide-text"></div>
    </div>
  </div>

  <script>
    const guides = {
      dogs: {
        title: "Dog Care Guide",
        content: `Dog Care\n
        Food: High-quality dog food (based on size and age)
        Occasional dog-safe treats
        Avoid chocolate, grapes, and bones that splinter\n
        Water: Fresh water available at all times\n
        Exercise: Daily walks and playtime
        Adjust based on breed and energy level\n
        Care: Brush regularly and bathe as needed
        Trim nails and clean ears
        Provide toys and social interaction
        Vet visits for checkups and vaccinations`
      },
      cats: {
        title: "Cat Care Guide",
        content: `Cat Care\n
        Food: High-quality cat food (wet, dry, or both)
        Occasional treats
        Avoid onions, garlic, and chocolate\n
        Water: Fresh water available at all times\n
        Exercise: Play daily with toys or climbing furniture
        Cats love to stalk, pounce, and jump\n
        Care: Scoop litter box daily, change litter weekly
        Brush fur regularly, especially for long-haired cats
        Trim nails and provide scratching posts
        Vet visits for checkups and vaccines`
      },
      rabbits: {
        title: "Rabbit Care Guide",
        content: `Rabbit Care\n
        Food: Unlimited hay (main food)
        Daily leafy greens (e.g., romaine, parsley)
        Small amount of pellets
        Occasional treats (like fruit)
        Avoid iceberg lettuce and too many carrots\n
        Water: Fresh water available at all times\n
        Exercise: Let them out daily to hop and explore
        Use a safe, rabbit-proofed area\n
        Care: Provide chew toys to prevent boredom
        Trim nails as needed ,Clean their living space regularly, Spend time with them—they’re social!`
      },
      reptiles: {
        title: "Reptile Care Guide",
        content: `Reptile Care\n
        Food: Depends on species (insects, veggies, or frozen mice)
        Gut-load insects before feeding
        Dust food with calcium or vitamin supplements\n
        Water: Clean water dish or misting (species-specific)\n
        Exercise: Climbing, crawling, or basking in an enriched enclosure\n
        Care: Provide heat lamps and UVB lighting
        Maintain proper humidity and temperature
        Spot clean regularly, full clean as needed
        Handle gently and infrequently (some reptiles don’t like too much contact)`
      },
      fish: {
        title: "Fish Care Guide",
        content: `Fish Care\n
        Food: Species-specific fish flakes, pellets, or frozen food
        Feed small amounts once or twice a day
        Avoid overfeeding—it dirties the tank\n
        Water: Use dechlorinated water
        Change part of the water weekly (10–25%)\n
        Exercise: Provide space to swim and explore
        Add plants, rocks, or decorations for enrichment\n
        Care: Use a filter and heater if needed
        Monitor water temperature and pH
        Clean the tank and check for algae regularly`
      }
    };

    function showGuide(petType) {
      document.getElementById('care-guide').classList.remove('hidden');
      document.getElementById('guide-title').innerText = guides[petType].title;
      document.getElementById('guide-text').innerHTML = guides[petType].content.replace(/\n/g, '<br>');
    }
  </script>

  <style>
    .container { text-align: center; }
    .icon-grid { display: flex; justify-content: center; gap: 20px; margin: 20px; }
    .pet-icon { cursor: pointer; text-align: center; }
    .pet-icon img { width: 100px; height: 100px; border-radius: 50%; object-fit: cover; }
    .hidden { display: none; }
    .care-guide { margin-top: 30px; text-align: left; max-width: 600px; }
  </style>
</body>

</html>
