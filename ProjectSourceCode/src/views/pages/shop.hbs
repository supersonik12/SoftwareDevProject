<style>
button {
  background-color: #04AA6D; /* Green */
  border: none;
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
  height: 50px;
  width: 150px;
  padding: 10px 24px;
}

.cards {
  display: flex; /* Use flexbox for horizontal layout */
  flex-wrap: wrap; /* Allow wrapping if there are too many cards */
  gap: 16px; /* Add spacing between cards */
  justify-content: center; /* Center the cards horizontally */
}

.card {
  flex: 1 1 calc(25% - 32px); /* Make cards responsive and take up more space */
  max-width: 300px; /* Set a maximum width for each card */
  text-align: center; /* Center-align card content */
  margin: 16px; /* Add margin around each card */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Add a shadow for better appearance */
  border-radius: 8px; /* Add rounded corners */
  overflow: hidden; /* Ensure content stays within the card */
}

.card img {
  width: 100%; /* Make the image take up the full width of the card */
  height: auto; /* Maintain aspect ratio */
}

.section h2 {
  text-align: center; /* Center the section titles */
  margin-bottom: 16px; /* Add some spacing below the title */
  font-size: 24px; /* Adjust font size for better visibility */
  color: #333; /* Optional: Set a color for the section titles */
}
</style>

<div class="shop">
    {{#each sections}}
        <div class="section">
            <h2>{{title}}</h2>
            <div class="cards">
                {{#each items}}
                    <div class="card">
                        <img src="{{image}}" alt="{{title}}" />
                        <h3>{{title}}</h3>
                        <p>{{description}}</p>
                        <button class="add-to-cart" data-id="{{id}}" onclick="window.open('{{link}}', '_blank');">Add to Cart</button>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/each}}
</div>

<div id="cart-dropdown" class="cart-dropdown hidden">
    <h3>Shopping Cart</h3>
    <ul id="cart-items">
        <!-- Cart items will be dynamically added here -->
    </ul>
    <button id="checkout-button">Checkout</button>
</div>